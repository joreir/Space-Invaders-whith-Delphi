unit UCnave;

interface
Uses Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls,JPEG,PNGImage, Vcl.StdCtrls;

Const
    Max = 8;

Type
    Nave_ene = Class
      Private
             Nx,Ny:Integer;
             img :TBitmap;
      Public
             Constructor Create(s:string);
             Procedure obtener_poscion(pos:integer);
             Procedure mover_derecha;
             Procedure mover_Izquierda;
             Procedure mover_abajo;
             Function obtener_imagen:Tbitmap;


    End;

implementation

{ Nave_ene }

Constructor Nave_ene.Create(s:string);
begin
  img := TBitmap.Create;
  img .LoadFromFile(s);
  img .Transparent:=True;
  img .TransparentColor:= img.Canvas.Pixels[1,1];
  img .TransparentMode:=tmAuto;
 // obtener_imagen(img);
  Nx:=1;
  Ny:=1;

end;

procedure Nave_ene.mover_abajo;
begin
Ny:=Ny-20;
end;

procedure Nave_ene.mover_derecha;
begin
Nx:=Nx+20;
end;

procedure Nave_ene.mover_Izquierda;
begin
Nx:=Nx-20;
end;



function Nave_ene.obtener_imagen: Tbitmap;
begin
Result:=img;
end;

procedure Nave_ene.obtener_poscion(pos:integer);
begin
 Nx:= pos;
 Ny:=1;
end;

end.
